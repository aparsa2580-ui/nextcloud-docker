# Project
COMPOSE_PROJECT_NAME=nextcloud

# Network configuration
BACKEND_NETWORK=nextcloud_backend
FRONTEND_NETWORK=nextcloud_frontend

# MySQL
MYSQL_ROOT_PASSWORD=your_root_password_here
MYSQL_DATABASE=nextcloud
MYSQL_USER=nextcloud
MYSQL_PASSWORD=your_secure_password_here
MYSQL_DATA=/var/lib/mysql
MYSQL_INITDB_SKIP_TZINFO=1

# Nextcloud
NEXTCLOUD_ADMIN_USER=admin
NEXTCLOUD_ADMIN_PASSWORD=your_admin_password_here
NEXTCLOUD_DATA_DIR=/var/www/html/data
NEXTCLOUD_TRUSTED_DOMAINS=your-domain.com

# phpMyAdmin
PMA_HOST=mysql
PMA_PORT=3306
PMA_USER=${MYSQL_USER}
PMA_PASSWORD=${MYSQL_PASSWORD}
PMA_ABSOLUTE_URI=https://your-domain.com/phpmyadmin/
PMA_ARBITRARY=0
UPLOAD_LIMIT=256M

# Nginx
NGINX_HOST=your-domain.com
NGINX_PMA_HOST=pma.your-domain.com  # Optional: different subdomain for phpMyAdmin
SSL_CERT_FILE=fullchain.pem
SSL_KEY_FILE=privkey.pem